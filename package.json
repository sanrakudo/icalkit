{
  "name": "icalkit-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "iCalKit - Calendar file management tools (monorepo)",
  "scripts": {
    "build": "pnpm build:lib && pnpm build:web",
    "build:lib": "pnpm --filter icalkit build",
    "build:web": "pnpm --filter icalkit-web build",
    "check": "pnpm format:check && pnpm lint",
    "deploy": "pnpm build && pnpm --filter icalkit-web exec wrangler pages deploy ../web/dist",
    "deploy:preview": "pnpm build && pnpm --filter icalkit-web exec wrangler pages deploy ../web/dist --branch=preview",
    "dev": "pnpm --filter icalkit-web dev",
    "fix": "pnpm format && eslint . --fix && pnpm -r exec eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate-images": "pnpm --filter icalkit-web generate-images",
    "license": "license-manager analyze -c license-manager.config.cjs",
    "license:extract": "license-manager extract -c license-manager.config.cjs",
    "lint": "eslint . && pnpm -r lint",
    "test": "pnpm -r test:run",
    "test:coverage": "pnpm -r test:coverage",
    "test:ui": "pnpm -r test:ui"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "^25.0.0",
    "@cybozu/license-manager": "^1.4.1",
    "eslint": "^9.39.2",
    "eslint-plugin-package-json": "^0.87.1",
    "prettier": "^3.7.4"
  }
}
